<?xml version="1.0" encoding="utf-8" standalone="no"?>
<security>
	<roles_hierarchy name="user_statut">
		<role_hierarchy name="ROLE_USER"/>
	</roles_hierarchy>
	<firewall>
		<config>
			<login>
				<source id="login" vars="fr"/>
			</login>
			<default>
				<source id="index" vars="fr"/>
			</default>
			<forbidden template="GCsystem/GCerror">
				<variable type="lang" name="error" value="firewallforbiddentitle"/>
				<variable type="lang" name="explication" value="firewallforbiddencontent"/>
			</forbidden>
			<csrf name="user_token" template="GCsystem/GCerror" enabled="true">
				<variable type="lang" name="error" value="firewallcsrftitle"/>
				<variable type="lang" name="explication" value="firewallcsrfcontent"/>
			</csrf>
			<connect name="user_connected" yes="true" no="false"/>
		</config>
		<access>
		</access>
	</firewall>
</security>
